{
  "version": 2,
  "name": "portfolio-site",
  "alias": ["portfolio-staging.vercel.app"],
  "builds": [
    {
      "src": "portfolio_site/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.11"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "static"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "/media/$1"
    },
    {
      "src": "/health/",
      "dest": "/portfolio_site/wsgi.py"
    },
    {
      "src": "/(.*)",
      "dest": "/portfolio_site/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "portfolio_site.settings.production",
    "PYTHONPATH": ".",
    "VERCEL": "1"
  },
  "envs": {
    "staging": {
      "DJANGO_SETTINGS_MODULE": "portfolio_site.settings.staging",
      "DEBUG": "True",
      "STAGING_BANNER": "True"
    },
    "production": {
      "DJANGO_SETTINGS_MODULE": "portfolio_site.settings.production",
      "DEBUG": "False"
    }
  },
  "build": {
    "env": {
      "PYTHON_VERSION": "3.11"
    }
  },
  "functions": {
    "portfolio_site/wsgi.py": {
      "runtime": "python3.11",
      "maxDuration": 30
    }
  },
  "regions": ["iad1"],
  "github": {
    "enabled": true,
    "autoAlias": true,
    "autoJobCancelation": true
  },
  "git": {
    "deploymentEnabled": {
      "main": true,
      "develop": "staging"
    }
  },
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/media/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/health/",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/admin",
      "destination": "/admin/",
      "permanent": true
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
