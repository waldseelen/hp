[bandit]
# Bandit configuration for security scanning

exclude_dirs = [
    "/tests",
    "/migrations",
    "/venv",
    "/.venv",
    "/node_modules",
    "/staticfiles",
    "/.pytest_cache",
    "/.ruff_cache",
    "/.next",
    "/media",
    "/logs"
]

# Skip specific test IDs
skips = [
    "B101",  # assert_used - asserts are OK in Django
    "B601",  # paramiko_calls - we don't use paramiko
    "B602",  # subprocess_popen_with_shell_equals_true - handled carefully
    "B603",  # subprocess_without_shell_equals_true - handled carefully
    "B607",  # start_process_with_partial_path - handled carefully
]

# Confidence levels: HIGH, MEDIUM, LOW
confidence = "HIGH"

# Severity levels: HIGH, MEDIUM, LOW
severity = "MEDIUM"

# Output format options: csv, json, txt, xml, yaml
format = "json"

