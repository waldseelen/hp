# Environment Configuration
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# Server Configuration
HOST=0.0.0.0
PORT=8001
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/portfolio_push
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10

# Authentication
REQUIRE_AUTH=true
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
API_KEY=your-api-key-for-service-to-service-communication

# VAPID Keys (Generate using: python -c "from py_vapid import Vapid; v = Vapid(); v.generate_keys(); print(f'Private: {v.private_key.private_bytes_raw().hex()}'); print(f'Public: {v.public_key.public_bytes_raw().hex()}')")
VAPID_PRIVATE_KEY=your_vapid_private_key_hex
VAPID_PUBLIC_KEY=your_vapid_public_key_hex
VAPID_SUBJECT=mailto:admin@yourdomain.com

# Rate Limiting
RATE_LIMIT_SUBSCRIPTION=100/hour
RATE_LIMIT_NOTIFICATION=50/hour
RATE_LIMIT_ANALYTICS=200/hour
RATE_LIMIT_DEFAULT=1000/hour

# Push Notification Settings
NOTIFICATION_TTL=86400
MAX_NOTIFICATION_SIZE=4096
MAX_BATCH_SIZE=1000
DELIVERY_RETRY_ATTEMPTS=3
DELIVERY_RETRY_DELAY=300

# External Services
SENTRY_DSN=your_sentry_dsn_for_error_tracking
PROMETHEUS_METRICS_ENABLED=true

# Logging
LOG_LEVEL=INFO

# Security
CORS_ALLOW_CREDENTIALS=true
SECURITY_HEADERS=true

# Background Tasks
CLEANUP_INTERVAL_HOURS=24
RETENTION_DAYS=90
