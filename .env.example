# =============================================================================
# Environment Configuration Template
# =============================================================================
# Copy this file to .env and update with your actual values

# =============================================================================
# CORE DJANGO SETTINGS
# =============================================================================

# Django secret key (generate new one for production)
SECRET_KEY=your-secret-key-here-generate-new-one-for-production

# Debug mode (never True in production)
DEBUG=True

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,*.railway.app,*.vercel.app

# Django settings module
DJANGO_SETTINGS_MODULE=portfolio_site.settings.development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL (SQLite for development, PostgreSQL for production)
DATABASE_URL=sqlite:///db.sqlite3
# DATABASE_URL=postgresql://user:password@localhost:5432/portfolio

# =============================================================================
# CACHE & SESSIONS
# =============================================================================

# Redis URL for caching and sessions
REDIS_URL=redis://localhost:6379/0

# Session configuration
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# Email backend
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP settings (for production)
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Email addresses
DEFAULT_FROM_EMAIL=noreply@portfolio.local
SERVER_EMAIL=server@portfolio.local

# =============================================================================
# STATIC & MEDIA FILES
# =============================================================================

# URLs
MEDIA_URL=/media/
STATIC_URL=/static/

# Storage backend
STATICFILES_STORAGE=django.contrib.staticfiles.storage.StaticFilesStorage

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# HTTPS settings (enable in production)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# Proxy settings
SECURE_PROXY_SSL_HEADER=

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Sentry DSN for error tracking
SENTRY_DSN=

# Git SHA for release tracking
GIT_SHA=

# =============================================================================
# GUNICORN CONFIGURATION
# =============================================================================

# Gunicorn settings
GUNICORN_WORKERS=4
GUNICORN_WORKER_CLASS=sync
GUNICORN_TIMEOUT=30
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=100

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================

# Celery broker and result backend
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================

# Admin URL (change for security)
ADMIN_URL=admin/

# =============================================================================
# STAGING-SPECIFIC SETTINGS
# =============================================================================

# Enable staging features
STAGING_BANNER=False
ENABLE_TEST_DATA=False
MOCK_EXTERNAL_SERVICES=False

# =============================================================================
# CLOUD STORAGE (Optional)
# =============================================================================

# AWS S3 settings
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=

# Google Cloud Storage
GCS_BUCKET=

# =============================================================================
# DEPLOYMENT PLATFORMS
# =============================================================================

# Railway configuration
PORT=8000

# Vercel configuration
VERCEL=

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Django Debug Toolbar
DJANGO_DEBUG_TOOLBAR=True

# Django Extensions
DJANGO_EXTENSIONS=True

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup settings
BACKUP_DIR=/tmp/backups
RETENTION_DAYS=30

# S3 backup bucket
AWS_S3_BACKUP_BUCKET=

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature toggles
ENABLE_BLOG=True
ENABLE_CONTACT=True
ENABLE_TOOLS=True
ENABLE_CHAT=True

# API rate limiting
API_RATE_LIMIT_ANON=100/hour
API_RATE_LIMIT_USER=1000/hour

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Google Analytics
GOOGLE_ANALYTICS_ID=

# Google Tag Manager
GOOGLE_TAG_MANAGER_ID=

# reCAPTCHA
RECAPTCHA_PUBLIC_KEY=
RECAPTCHA_PRIVATE_KEY=

# =============================================================================
# LEGACY SETTINGS (for compatibility)
# =============================================================================

# Site Configuration
SITE_NAME=Portfolio
SITE_DOMAIN=yourdomain.com
SITE_URL=https://yourdomain.com

# Admin Configuration
ADMIN_NAME=Your Name
ADMIN_EMAIL=admin@yourdomain.com

# Custom Settings
PORTFOLIO_TITLE=My Portfolio
PORTFOLIO_SUBTITLE=Full Stack Developer & Cybersecurity Enthusiast
CONTACT_EMAIL=contact@yourdomain.com