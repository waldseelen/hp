{
  "name": "Portfolio - Professional Web Developer",
  "short_name": "Portfolio",
  "description": "Modern portfolio website showcasing web development projects, tools, and expertise in Django, JavaScript, and frontend technologies.",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#3b82f6",
  "background_color": "#ffffff",
  "lang": "tr",
  "dir": "ltr",

  "icons": [
    {
      "src": "/static/favicon.ico",
      "sizes": "16x16 32x32",
      "type": "image/x-icon",
      "purpose": "any"
    },
    {
      "src": "/static/images/favicon-192x192.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      "src": "/static/images/favicon-512x512.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    }
  ],

  "shortcuts": [
    {
      "name": "Blog",
      "short_name": "Blog",
      "description": "Read latest blog posts and articles",
      "url": "/blog/",
      "icons": [
        {
          "src": "/static/icons/optimized/blog.svg",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "Tools",
      "short_name": "Tools",
      "description": "Explore development tools and utilities",
      "url": "/tools/",
      "icons": [
        {
          "src": "/static/icons/optimized/tools.svg",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "Contact",
      "short_name": "Contact",
      "description": "Get in touch for projects and collaborations",
      "url": "/contact/",
      "icons": [
        {
          "src": "/static/icons/optimized/contact.svg",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    }
  ],

  "categories": [
    "productivity",
    "developer",
    "portfolio",
    "utilities"
  ],

  "screenshots": [
    {
      "src": "/static/images/screenshots/desktop-home.webp",
      "sizes": "1920x1080",
      "type": "image/webp",
      "form_factor": "wide",
      "label": "Desktop home page showcasing portfolio features"
    },
    {
      "src": "/static/images/screenshots/mobile-home.webp",
      "sizes": "375x812",
      "type": "image/webp",
      "form_factor": "narrow",
      "label": "Mobile responsive design on home page"
    }
  ],

  "related_applications": [],

  "prefer_related_applications": false,

  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui",
    "browser"
  ],

  "edge_side_panel": {
    "preferred_width": 320
  },

  "launch_handler": {
    "client_mode": "navigate-existing"
  },

  "protocol_handlers": [
    {
      "protocol": "web+portfolio",
      "url": "/?protocol=%s"
    }
  ],

  "share_target": {
    "action": "/share/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },

  "file_handlers": [
    {
      "action": "/tools/code-viewer/",
      "accept": {
        "text/plain": [".txt", ".md", ".json"],
        "application/javascript": [".js", ".mjs"],
        "text/css": [".css"],
        "text/html": [".html", ".htm"]
      }
    }
  ],

  "handle_links": "preferred",

  "iarc_rating_id": "",

  "permissions_policy": {
    "accelerometer": [],
    "ambient-light-sensor": [],
    "autoplay": ["self"],
    "battery": [],
    "camera": [],
    "display-capture": [],
    "document-domain": [],
    "encrypted-media": [],
    "execution-while-not-rendered": ["self"],
    "execution-while-out-of-viewport": ["self"],
    "fullscreen": ["self"],
    "geolocation": [],
    "gyroscope": [],
    "magnetometer": [],
    "microphone": [],
    "midi": [],
    "navigation-override": ["self"],
    "payment": [],
    "picture-in-picture": [],
    "publickey-credentials-get": [],
    "screen-wake-lock": [],
    "sync-xhr": [],
    "usb": [],
    "web-share": ["self"],
    "xr-spatial-tracking": []
  }
}